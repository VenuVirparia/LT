%{
#include<stdio.h>
#include<stdlib.h>
}%

%%
  "username" {
              char *user = getenv("USER");
              if(user)
                printf("Logged in user: %s\n", user);
              else
                printf("Unable to retrive username");
            }
./\n  {//Ignore other character and new line}
%%

int yywrap(){
printf("Type username to get current logged in user: ");
yylex();
return 0;
}




To run:
lex filename.l
gcc lex.yy.c
./a.out
